{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "./dist/",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // react18这里也可以改成react-jsx
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
